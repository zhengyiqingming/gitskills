<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.dao.MenuDao">
	<resultMap type="com.baizhi.entity.Menu" id="m1">
		<id column="id" property="id"/>
		<result column="title" property="title"/>
		<result column="iconCls" property="iconCls"/>
		<result column="chref" property="href"/>
		<collection property="myMenu" ofType="com.baizhi.entity.Menu">
			<id column="cid" property="id"/>
			<result column="ctitle" property="title"/>
			<result column="ciconCls" property="iconCls"/>
			<result column="chref" property="href"/>
		</collection>
		
	</resultMap>

	<!-- 自连接 -->
	<select id="queryItems" resultMap="m1">		
		select a.id,a.title,a.iconCls,b.id cid,b.title ctitle,b.iconCls ciconCls,
	  	b.href chref
	  	from menu a join menu b on a.id=b.parentId order by id asc
	</select> 
</mapper>
